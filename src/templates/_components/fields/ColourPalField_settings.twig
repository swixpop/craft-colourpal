{% import "_includes/forms" as forms %}

{#{% do view.registerAssetBundle("swixpop\\colourpal\\assetbundles\\colourpal\\ColourPalAsset") %}#}

{{ forms.selectField({
    label: "Palette" | t('colour-pal'),
    warning: (not field.isNew() and not field.hasErrors('type') ? "Changing this may result in data loss." | t('site')),
    id: 'palette',
    name: 'palette',
    options: fieldOptions,
    value: field['palette'],
    errors: field.getErrors('palette') ?? null
}) }}


{{ forms.lightswitchField({
    label: "Allow blank" | t('colour-pal'),
    id: 'allowBlank',
    name: 'allowBlank',
    on: allowBlank
}) }}

{{ forms.lightswitchField({
    label: "Sort by name" | t('colour-pal'),
    id: 'sortByName',
    name: 'sortByName',
    on: sortByName
}) }}
